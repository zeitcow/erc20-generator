{
  "name": "erc20-generator",
  "version": "3.0.0-beta",
  "description": "A simple Smart Contract for a Standard, Capped, Mintable, Burnable ERC20 Token.",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev": "lite-server",
    "console": "truffle develop",
    "compile": "scripts/compile.sh",
    "coverage": "npm run compile && scripts/coverage.sh",
    "clean": "rm -rf coverage",
    "profile": "npm run clean && npm run coverage && open coverage/index.html",
    "test": "npm run compile && scripts/test.sh",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "flat": "scripts/flat.sh",
    "analyze": "scripts/analyze.sh",
    "version": "scripts/version.js",
    "buidler:compile": "buidler compile",
    "buidler:coverage": "npm run buidler:compile && USE_BUIDLER=true scripts/coverage.sh",
    "buidler:console": "buidler console",
    "buidler:test": "buidler test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vittominacori/erc20-generator.git"
  },
  "homepage": "https://github.com/vittominacori/erc20-generator/",
  "bugs": {
    "url": "https://github.com/vittominacori/erc20-generator/issues"
  },
  "author": "Vittorio Minacori",
  "contributors": [
    {
      "name": "Vittorio Minacori",
      "url": "https://github.com/vittominacori"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/buidler": "^1.2.0",
    "@nomiclabs/buidler-ganache": "^1.2.0",
    "@nomiclabs/buidler-truffle5": "^1.2.0",
    "@nomiclabs/buidler-web3": "^1.2.0",
    "@openzeppelin/test-helpers": "^0.5.5",
    "chai": "^4.2.0",
    "coveralls": "^3.0.11",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-mocha-no-only": "^1.1.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "ethereumjs-util": "^6.2.0",
    "ethjs-abi": "^0.2.1",
    "ganache-cli": "^6.9.1",
    "lite-server": "^2.5.4",
    "pify": "^5.0.0",
    "sol2uml": "^1.1.17",
    "solhint": "^2.3.1",
    "solidity-coverage": "^0.7.4",
    "surya": "^0.3.5",
    "truffle": "^5.1.21",
    "truffle-flattener": "^1.4.3",
    "web3": "^1.2.6"
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.0.0-rc.1",
    "erc-payable-token": "github:vittominacori/erc1363-payable-token#next",
    "eth-token-recover": "github:vittominacori/eth-token-recover#next"
  }
}
